BOTAR LA BASE DE  DATOS SI EXISTE proyecto;
CREAR  BASE DE DATOS  proyecto ;
USE proyecto;

CREAR  TABLA  aplicaciones(
    id_aplicaciones SMALLINT UNSIGNED AUTO_INCREMENT PRIMARY KEY ,
    nombre VARCHAR ( 50 ) NO NULO,
    pass VARCHAR ( 10 )

);

CREAR  TABLA  notas (
    id_nota SMALLINT UNSIGNED AUTO_INCREMENT PRIMARY KEY ,
    nombre_n VARCHAR ( 50 ) NO NULO ,
    contenido VARCHAR ( 100 ) 
);

CREAR  TABLA  recordatorios (
    id_recordatorio SMALLINT UNSIGNED AUTO_INCREMENT PRIMARY KEY ,
    nombre_n VARCHAR ( 50 ) NO NULO ,
    contenido_n VARCHAR ( 100 ) 
);

CREAR  TABLA  notas_recordatarios (
    id_nota SMALLINT SIN FIRMAR ,
    id_recordatorio SMALLINT SIN FIRMAR ,
    CLAVE PRIMARIA (id_nota, id_recordatorio),
    CLAVE EXTRANJERA (id_nota) REFERENCIAS notas (id_nota),
    CLAVE EXTRANJERA (id_recordatorio) REFERENCIAS recordatorios (id_recordatorio)
);


INSERTAR EN notas (nombre_n) VALORES 
	( ' cita ' ),
	( ' tarea pendiente ' ),
	( ' salida ' ),
	( ' importante' )
;

INSERTAR EN aplicaciones (nombre, pass) VALORES 
	( ' Twitter ' , 123456),
	( ' Google ' , 00974546 ),
	( ' Youtube ' , 7456038 ),
	( ' Mercado libre ' , 635353 )	
;
